<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Boi Lagbe | Online Books Store</title>
    <!-- <link rel="stylesheet" href="/css/style.css" type="text/css"> -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <link href="/static/css/style.css" rel="stylesheet">
</head>

<body>
    <div class="header">
        <div class="container">
            <div class="navbar">
                <div class="logo">
                    <a href="/"> <img src="/static/images/logo.png" width="125px"></a>
                </div>
                <nav>
                    <ul id="MenuItems">
                        <li><a href="/">Home</a></li>
                        <li><a href="/account">Log in</a></li>
                        <li><a href="/account">Register</a></li>
                    </ul>
                </nav>
                <img src="https://cdn.discordapp.com/attachments/924623713528344587/962307060962328596/menu.png"
                    class="menu-icon" onclick="menutoggle()">
                <!-- <img src="images/menu.png" class="menu-icon" onclick="menutoggle()"> -->

            </div>
            <div class="row">
                <div class="col-2">
                    <h1>ONE STOP BOOK STORE!</h1>
                    <p>Get all your wishlisted books right at your<br> doorstep with guranteed one day delivery!</p>
                    <a href="/account" class="btn"> Sign up &#8594;</a>

                </div>
                <div class="col-2">
                    <img src=/static/images/digital-2.png>
                </div>
            </div>
        </div>
    </div>

    <!---prods in actegories--->
    <div class="small-container">
        <h2 class="title">Featured Books</h2>
        <div class="row">
            <% if (locals.details && locals.details.length !=0){ %>
                <% details.map(book=> { %>
                    <div class="col-4">
                        <img style="width: 100%; height: 360px;" src="<%= book.image %>">
                        <div>
                            <form style="color:rgb(21, 20, 20);" action="/details" method="post">
                                <h4><input type="hidden" name="name" value="<%= book.name %>"></h4>
                                <button type="submit" class="btn" ">
                                    <%= book.name %>
                                </button>
                            </form>
                        </div>
                        <h4 style=" color: var(--primary-alt)">BDT<%= book.price %> %>
                                        </h4>
                        </div>
                        <% }) %>
                            <% } %>
                    </div>
                    <a href="/browse" class="btn"> View All &#8594;</a>

        </div>
    <!---Footer-->
    <div class="footer">
        <div class="container">
            <div class="row"></div>
            <div class="footer-col-1">
                <h3>Follow us on</h3>
                <ul>
                    <li>Facebook</li>
                    <li>Twitter</li>
                    <li>Instagram</li>
                </ul>
            </div>
        </div>
    </div>
    </div>
    <!---JS for menu toggle-->
    <script>
        var MenuItems = document.getElementById("MenuItems");
        MenuItems.style.maxHeight = "0px";
        function menutoggle() {
            if (MenuItems.style.maxHeight == "0px") {
                MenuItems.style.maxHeight = "200px";
            }
            else {
                MenuItems.style.maxHeight = "0px";
            }
        }
    </script>
    <script>
        window.addEventListener("load", (event) => (window.history.replaceState) ?
            window.history.replaceState(null, null, window.location.href) : null
        )
    </script>
</body>

</html>
